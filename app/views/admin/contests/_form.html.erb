  </div>

  <div class="field">
    <%= f.label :description_ja %>
    <%= f.text_area :description_ja %>
  </div>

  <div class="field">
    <%= f.label :description_en %>
    <%= f.text_area :description_en %>
  </div>

  <div class="field">
    <%= f.label :score_baseline %>
    <%= f.text_field :score_baseline %>
  </div>

  <div class="field">
    <%= f.label :start_at %>
    <%= f.datetime_select :start_at %>
  </div>

  <div class="field">
    <%= f.label :end_at %>
    <%= f.datetime_select :end_at %>
  </div>

  <div class="field">
    <%= f.label :status %>
