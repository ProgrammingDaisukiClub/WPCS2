<p id="notice"><%= notice %></p>

<h1>Problems</h1>

<table>
  <thead>
    <tr>
      <th>Name ja</th>
      <th>Name en</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @problems.each do |problem| %>
      <tr>
        <td><%= problem.name_ja %></td>
        <td><%= problem.name_en %></td>
        <td><%= problem.order %></td>
        <td><%= link_to 'Show', [:admin, problem] %></td>
        <td><%= link_to 'Edit', edit_admin_problem_path(problem) %></td>
        <td><%= link_to 'Destroy', [:admin, problem], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Problem', new_admin_problem_path %>
